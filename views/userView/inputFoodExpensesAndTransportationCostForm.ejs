<div class="container box">
  
  <form class="inputUserInfo" method="POST" action="/users/create">
    <label for="inputEslistmentDay">날짜</label>
    <input
      type="date"
      id="inputEslistmentDay"
      name="eslistmentDay"
      value="2018-07-22"
      min="2018-01-01"
      max="2020-12-31"
    />

    <label for="inputFoodExpenses">식비</label>
    <input type="number" name="foodExpenses" id="foodExpenses" required />

    <label for="inputTransportationCost">교통비</label>
    <input
      type="number"
      name="transportationCost"
      id="inputTransportationCost"
      required
    />

    <label for="inputWantMonth">몇월 월급을 계산할까요?(2020년만 지원중)</label>
    <input type="number" maxlength="2" name="calculateMonth" placeholder="month">

    <button type="submit">제출!</button>
  </form>
</div>

